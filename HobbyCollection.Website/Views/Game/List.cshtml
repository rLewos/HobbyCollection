@model HobbyCollection.Website.ViewModels.GameViewModel

<div>
	@if (Model.GameList != null && Model.GameList.Count > 0)
	{
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Release Date</th>
					<th>-</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.GameList)
				{
					<tr itemid="@item.Id">
						<td>@item.Id</td>
						<td><a asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></td>
						<td>@item.ReleaseDate.ToString()</td>
						<td>-</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>There aren't games on database...</p>
	}
</div>
