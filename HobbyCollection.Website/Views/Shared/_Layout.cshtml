<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Games</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Games.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">

				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Games</a>
				
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						@* <li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li> *@

						<li class="nav-item dropdown">
							<a id="idNavGameMenu" class="nav-link text-black dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Game
							</a>
							<ul class="dropdown-menu" aria-labelledby="idNavGameMenu">
								<li><a class="dropdown-item" asp-controller="Game" asp-action="Index">All</a></li>
								<li><a class="dropdown-item" asp-controller="Game" asp-action="Add">Add</a></li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a id="idNavDeveloper" class="nav-link text-black dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Developer</a>
							<ul class="dropdown-menu" aria-labelledby="idNavDeveloper">
								<li><a class="dropdown-item" asp-controller="Developer" asp-action="Index">All</a></li>
								<li><a class="dropdown-item" asp-controller="Developer" asp-action="Add">Add</a></li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a id="idNavPublisherMenu" class="nav-link text-black dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Publisher
							</a>
							<ul class="dropdown-menu" aria-labelledby="idNavPublisherMenu">
								<li><a class="dropdown-item" asp-controller="Publisher" asp-action="Index">All</a></li>
								<li><a class="dropdown-item" asp-controller="Publisher" asp-action="Add">Add</a></li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a id="idNavPlataformMenu" class="nav-link text-black dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Plataform
							</a>
							<ul class="dropdown-menu" aria-labelledby="idNavPlataformMenu">
								<li><a class="dropdown-item" asp-controller="Plataform" asp-action="Index">All</a></li>
								<li><a class="dropdown-item" asp-controller="Plataform" asp-action="Add">Add</a></li>
							</ul>
						</li>
						
						<li class="nav-item dropdown">
							<a id="idNavUserMenu" class="nav-link text-black dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								User
							</a>
							<ul class="dropdown-menu" aria-labelledby="idNavUserMenu">
								<li><a class="dropdown-item" asp-controller="User" asp-action="Index">All</a></li>
								<li><a class="dropdown-item" asp-controller="User" asp-action="Add">Add</a></li>
							</ul>
						</li>

					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - Games - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
